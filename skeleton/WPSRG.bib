journal = {Geomorphology},
keywords = {137Cs,210Pb,Baltic coastal wetlands,Sea level rise,Sedimentation,Storm surges},
pages = {61--72},
publisher = {Elsevier B.V.},
title = {{Recent rates of sedimentation on irregularly flooded Boreal Baltic coastal wetlands: Responses to recent changes in sea level}},
