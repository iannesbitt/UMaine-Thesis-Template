journal = {Geomorphology},
keywords = {Channel form,Digital elevation modeling,River restoration,River topography,Synthetic river topography},
pages = {40--55},
publisher = {Elsevier B.V.},
title = {{Synthetic river valleys: Creating prescribed topography for form-process inquiry and river rehabilitation design}},
url = {http://dx.doi.org/10.1016/j.geomorph.2014.02.025},
volume = {214},
year = {2014}
}
@techreport{Krieger2007,
abstract = {The St. Johns dam was constructed in 1901 on the Sandusky River at river mile 50.2 in southern Seneca County, Ohio, in the Eastern Corn Belt Plains ecoregion. The dam spanned approximately 150 feet, was 7 feet high, and created an impoundment 8 miles long. Following a decision to remove the dam, a shallow breach was made in the top of the dam at one end in March 2003, and the entire structure was removed on 17 November 2003. As a measure of the impact of removal of the dam on the biological communities of the river, the response of the macroinvertebrate community was investigated. Ohio Environmental Protection Agency (OEPA) methods for measuring biological quality in Ohio rivers were employed in this study. The methods involve placing artificial substrates (modified Hester-Dendy samplers) in the river to be colonized by macroinvertebrates to provide quantitative information. Qualitative sampling of natural substrates is performed to provide information on overall taxonomic diversity. The data are applied to ten metrics to derive a score for the Invertebrate Community Index (ICI). The ICI score provides a rating of biological quality based on expectations for reference streams in that ecoregion. Hester-Dendy samplers were colonized at three sites in the impounded reach of the Sandusky River in October and November 2003 and were recovered from the river the day the dam was removed. No qualitative sampling was accomplished because of high water conditions. Those sites and four additional sites were sampled both quantitatively and qualitatively in the summers of 2004 and 2005. Relatively few macroinvertebrates sensitive to degraded stream conditions were present at the three sites in the impoundment prior to dam removal, but after removal their numbers were higher and their proportional contribution to the macroinvertebrate community was similar to that at the other four sites. Similarly, the proportion of macroinvertebrates highly tolerant of degraded conditions declined markedly at the three sites following dam removal. On the basis of ICI scores, the macroinvertebrate community within the impoundment before dam removal was rated “Fair” (ICI scores from 20 to 24) at all three sites and thereby failed to meet the Warmwater Habitat (WWH) criterion (ICI = 36 or higher) for macroinvertebrates established by OEPA as the goal for the Sandusky River. OEPA had rated one of those sites (Walnut Grove) as “Poor” in 2001. In summer 2004, nine months after dam removal, that site was rated “Fair”, and in summer 2005 it was rated “Good”. In 2004, the two sites immediately upstream of the former dam were rated “Good” (west side, ICI = 44) and “Exceptional” (east side, ICI = 48), and a fourth site within the former impoundment near its most upstream extent was rated “Good”. Thus, three of the four sites in the former impoundment met the WWH criterion. A site below the former dam and two sites upstream of the impoundment were rated “Good” in 2004 and six of the seven sites met the criterion for “Exceptional Warmwater Habitat” in 2005. The results from 2004 indicate that the biological quality of the river in the formerly impounded reach adjusted rapidly to the changes in habitat quality that resulted from removal of the dam and that the once again free-flowing reach of the river developed a macroinvertebrate community similar to those present upstream and downstream of the former impoundment. The samples collected in 2005 confirmed the 2004 findings and revealed the presence of an exceptional macroinvertebrate community throughout most of the study reach.},
author = {Krieger, KA and Stearns, AM},
booktitle = {Report},
pages = {43},
title = {{Response of the Macroinvertebrate Community of the Sandusky River in Seneca and Wyandot Counties, Ohio, to Removal of the St. Johns Dam}},
