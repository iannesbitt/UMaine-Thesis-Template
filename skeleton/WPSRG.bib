journal = {Agriculture, Ecosystems and Environment},
keywords = {Agricultural landscapes,Aquatic macroinvertebrates,Forest fragment,Headwater streams,Land-cover transitions,Stream restoration},
pages = {106--117},
title = {{Shifts in attributes along agriculture-forest transitions of two streams in central Ohio, USA}},
