journal = {Environmental Modelling and Software},
keywords = {Coupling,Digital Elevation Model (DEM),Dryland agriculture,Farm dam,Hydrologic prediction},
number = {8},
pages = {959--968},
publisher = {Elsevier Ltd},
title = {{The effect of farm dams and constructed banks on hydrologic connectivity and runoff estimation in agricultural landscapes}},
