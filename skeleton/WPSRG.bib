author = {Verstraeten, Gert and Prosser, Ian P.},
doi = {10.1016/j.geomorph.2006.12.026},
file = {::},
isbn = {0169-555X},
issn = {0169555X},
journal = {Geomorphology},
keywords = {Erosion modelling,Farm dams,Geomorphic response,Land use change,Murrumbidgee,Reservoir sedimentation,Sediment yield},
number = {3-4},
