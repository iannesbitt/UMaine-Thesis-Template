journal = {Aquatic Ecology},
keywords = {Climate change,Cyanobacteria,Drawdown,Flooding,Lake,Macrophyte,Phytoplankton},
number = {3},
pages = {485--498},
publisher = {Springer Netherlands},
title = {{Impact of water-level fluctuations on cyanobacterial blooms: options for management}},
volume = {50},
year = {2016}
