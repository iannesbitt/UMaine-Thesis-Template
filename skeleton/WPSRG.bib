isbn = {0169-555X},
issn = {0169555X},
journal = {Geomorphology},
keywords = {Coastal change,Dam removal,Delft3D model,Delta,Elwha River,Sediment dispersal},
pages = {649--668},
title = {{Large-scale dam removal on the Elwha River, Washington, USA: Coastal geomorphic change}},
