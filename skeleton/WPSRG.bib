issn = {18791026},
journal = {Science of the Total Environment},
keywords = {Lakes,Methylmercury,Post-impoundment,Season,Water level fluctuation,Western North America Mercury Synthesis},
number = {March},
pages = {739--748},
pmid = {27039275},
publisher = {Elsevier B.V.},
title = {{Reservoirs and water management influence fish mercury concentrations in the western United States and Canada}},
url = {http://dx.doi.org/10.1016/j.scitotenv.2016.03.050},
volume = {568},
year = {2016}
